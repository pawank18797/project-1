pipeline {
    agent any 
    stages {
        stage(code) {
            steps {
                git "https://github.com/pawank18797/myweb-01.git"
            }
        }
        stage(build) {
            steps {
                sh "mvn clean package"
            }
        }
        stage("deploy") {
            steps {
                sh  " cp /var/lib/jenkins/workspace/job01/target/*.war  /opt/apache-tomcat-9.0.73/webapps "
            }
        }
    }
}
